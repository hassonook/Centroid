@model IEnumerable<Centroid.Models.About>
<section class="section secPadding">
    <div class="container">
        @if (Model.Count() == 0)
        {
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        }
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AboutUs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vision)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mission)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CoreBusiness)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Experience)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Expertise)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.Raw(Server.HtmlDecode(item.AboutUs))
                    </td>
                    <td>
                        @Html.Raw(Server.HtmlDecode(item.Vision))
                    </td>
                    <td>
                        @Html.Raw(Server.HtmlDecode(item.Mission))
                    </td>
                    <td>
                        @Html.Raw(Server.HtmlDecode(item.CoreBusiness))
                    </td>
                    <td>
                        @Html.Raw(Server.HtmlDecode(item.Experience))
                    </td>
                    <td>
                        @Html.Raw(Server.HtmlDecode(item.Expertise))
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>