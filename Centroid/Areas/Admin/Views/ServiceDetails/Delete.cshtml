@model Centroid.Models.ServiceDetails
    <section class="section pclear secPadding">
        <div class="container">

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.Raw(Server.HtmlDecode(Model.Description))
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Image)
                    </dt>

                    <dd>
                        <img height="100" width="100" src="@Url.Content(Model.Image)"/>
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to Services", "Index", "Services")
                    </div>
                }
            </div>
        </div>
    </section>
