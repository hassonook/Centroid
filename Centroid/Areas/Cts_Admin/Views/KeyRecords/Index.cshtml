@model IEnumerable<Centroid.Models.KeyRecord>
    <section class="section clearfix secPadding aboutus" data-animation-effect="fadeIn">
        <div class="container">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RecordText)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RecordImage)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecordText)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecordImage)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
     </section>
