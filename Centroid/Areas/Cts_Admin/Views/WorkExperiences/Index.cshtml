@model IEnumerable<Centroid.Models.WorkExperience>

@{
    ViewBag.Title = "Experience";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="section secPadding clearfix" data-animation-effect="fadeIn">
    <div class="container">
        <h2>Add Work Experiences if you have.</h2>
        <p>
            @Html.ActionLink("Add New", "Create", "WorkExperiences", new { jobId = ViewBag.JobId, profileId = ViewBag.ProfileId }, htmlAttributes: new { @class = "btn btn-secondary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "WorkExperiences", new { id = item.Id, jobId = ViewBag.JobId, profileId = item.PersonalInfoId }, null) |
                        @Html.ActionLink("Delete", "Delete", "WorkExperiences", new { id = item.Id, jobId = ViewBag.JobId, profileId = item.PersonalInfoId }, null)
                </tr>
            }

        </table>
        <p>
            @Html.ActionLink("Back", "Index", "Educations", new { jobId = ViewBag.JobId, profileId = ViewBag.ProfileId }, htmlAttributes: new { @class = "btn btn-secondary" })
            @Html.ActionLink("Exit", "job", "Careers", null, htmlAttributes: new { @class = "btn btn-danger" })
            @Html.ActionLink("Continue", "Index", "ProfileDocuments", new { jobId = ViewBag.JobId, profileId = ViewBag.ProfileId }, htmlAttributes: new { @class = "btn btn-primary" })
        </p>
    </div>
</section>
