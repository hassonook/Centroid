@model Centroid.Models.Job
    <section class="section secPadding clearfix" data-animation-effect="fadeIn">
        <div class="container">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.JobTitle)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.JobTitle)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.JobDetails)
                    </dt>

                    <dd>
                        @Html.Raw(Server.HtmlDecode(Model.JobDetails))
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.JobType)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.JobType)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </section>
