            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
        }
    </tr>
</table>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Documents.FirstOrDefault().Name)</th>
        <th>@Html.DisplayNameFor(model => model.Documents.FirstOrDefault().DocType)</th>
        <th>@Html.DisplayNameFor(model => model.Documents.FirstOrDefault().Document)</th>
    </tr>
    <tr>
        @foreach (var item in Model.Documents)
        {
            <td>@item.Name</td>
            <td>@item.DocType</td>
            <td><a href="@Url.Content(item.Document)">Download/Preview</a></td>
        }
    </tr>
</table>
