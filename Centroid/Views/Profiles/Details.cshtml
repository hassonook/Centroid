<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Educations.FirstOrDefault().EducationalInstitution)</th>
        <th>@Html.DisplayNameFor(model => model.Educations.FirstOrDefault().Country)</th>
        <th>@Html.DisplayNameFor(model => model.Educations.FirstOrDefault().EducationLevel)</th>
        <th>@Html.DisplayNameFor(model => model.Educations.FirstOrDefault().Discipline)</th>
        <th>@Html.DisplayNameFor(model => model.Educations.FirstOrDefault().StartDate)</th>
        <th>@Html.DisplayNameFor(model => model.Educations.FirstOrDefault().EndDate)</th>
        <th>@Html.DisplayNameFor(model => model.Educations.FirstOrDefault().Highest)</th>
    </tr>
    <tr>
        @foreach (var item in Model.Educations)
        {
            <td>@item.EducationalInstitution</td>
            <td>@item.Country</td>
            <td>@item.EducationLevel</td>
            <td>@item.Discipline</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.Highest</td>
        }
    </tr>
</table>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.WorkExperiences.FirstOrDefault().Employer)</th>
        <th>@Html.DisplayNameFor(model => model.WorkExperiences.FirstOrDefault().JobTitle)</th>
        <th>@Html.DisplayNameFor(model => model.WorkExperiences.FirstOrDefault().StartDate)</th>
        <th>@Html.DisplayNameFor(model => model.WorkExperiences.FirstOrDefault().EndDate)</th>
    </tr>
