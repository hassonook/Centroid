@model Centroid.Models.About

<!-- section start -->
<section class="section clearfix secPadding aboutus" data-animation-effect="fadeIn">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    
                    <div class="col-md-12">
                        <h2><strong>About Our Company</strong></h2>
                        @Html.Raw(Server.HtmlDecode(Model.AboutUs))
                    </div>
                </div>
                <!-- section start -->
                <section class="default-bg rad-10">
                    <div class="container">
                        <div class='row'>
                            <div class='col-md-12'>
                                <div class="carousel slide" data-ride="carousel" id="quote-carousel">
                                    <!-- Bottom Carousel Indicators -->
                                    <ol class="carousel-indicators">
                                        <li data-target="#quote-carousel" data-slide-to="0" class="active"></li>
                                        <li data-target="#quote-carousel" data-slide-to="1"></li>
                                        <li data-target="#quote-carousel" data-slide-to="2"></li>
                                    </ol>
                                    <!-- Carousel Slides / Quotes -->
                                    <div class="carousel-inner about">
                                        <!-- Quote 1 -->
                                        <div class="item active">
                                            <blockquote>
                                                <div class="row">
                                                    <div class="col-sm-2 text-center">
                                                        <img class="img-circle" src="~/Content/images/About/vision.jpg" style="width: 155px;height:155px;">
                                                    </div>
                                                    <div class="col-sm-9">
                                                        @Html.Raw(Server.HtmlDecode(Model.Vision))
                                                    </div>
                                                </div>
                                            </blockquote>
                                        </div>
                                        <!-- Quote 2 -->
                                        <div class="item">
                                            <blockquote>
                                                <div class="row">
                                                    <div class="col-sm-2 text-center">
                                                        <img class="img-circle" src="~/Content/images/About/mission.jpg" style="width: 155px;height:155px;">
                                                    </div>
                                                    <div class="col-sm-9">
                                                        @Html.Raw(Server.HtmlDecode(Model.Mission))
                                                    </div>
                                                </div>
                                            </blockquote>
                                        </div>
                                        <!-- Quote 3 -->
                                        <div class="item">
                                            <blockquote>
                                                <div class="row">
                                                    <div class="col-sm-2 text-center">
                                                        <img class="img-circle" src="~/Content/images/About/CoreBusiness.jpg" style="width: 155px;height:155px;">
                                                    </div>
                                                    <div class="col-sm-9">
                                                        @Html.Raw(Server.HtmlDecode(Model.CoreBusiness))
                                                    </div>
                                                </div>
                                            </blockquote>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- section end -->
                <div class="row">
                    <div class="col-md-6">
                        <h2>Our Experience</h2>
                        @{
                            var experience = Model.Experience.Substring(Model.Experience.IndexOf("<li"));
                            experience = experience.Replace(";", "").Replace("</li>\r\n<li>", ";").Replace("<li>", "").Replace("</li>\r\n</ul>", "");
                            var experienceList = experience.Split(';');
                        }
                        <ul class="list-unstyled">
                            @foreach (var item in experienceList)
                            {
                                <li><i class="fa fa-arrow-circle-right pr-10 colored"></i>@item</li>
                            }
                        </ul>
                        @*@Html.Raw(Server.HtmlDecode(Model.Experience))*@
                    </div>
                    <div class="col-md-6">
                        <h2>Our Expertise</h2>
                        @{
                            var expertise = Model.Expertise.Substring(Model.Expertise.IndexOf("<li"));
                            expertise = expertise.Replace(";", "").Replace("</li>\r\n<li>", ";").Replace("<li>", "").Replace("</li>\r\n</ul>", "");
                            var expertiseList = expertise.Split(';');
                        }
                        <ul class="list-unstyled">
                            @foreach (var item in expertiseList)
                            {
                                <li><i class="fa fa-arrow-circle-right pr-10 colored"></i>@item</li>
                            }
                        </ul>
                        @*@Html.Raw(Server.HtmlDecode(Model.Expertise))*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- section end -->
